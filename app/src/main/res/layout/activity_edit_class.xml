<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_class_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_instance_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter instance date and time (e.g., 2023-10-01 10:00)" />

    <Button
        android:id="@+id/button_add_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Instance" />

    <!--<Button
        android:id="@+id/button_edit_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Class" />-->
</LinearLayout>